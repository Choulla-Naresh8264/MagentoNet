@{Layout="~/Views/Shared/_Layout_bootstrap_backbone.cshtml";}
<script src="/Content/js/catitem-init.js"></script>

<script type="text/template" id="search_template">
  <label>CatName:</label> <input type="text" id="name" value="<%= nameValue %>" /><br />
  <label>CatDescription:</label> <br />
  <textarea id="description">
  <%= descriptionValue %>
  </textarea>
</script>

<script type="text/javascript">
jQuery(function () {
	var mymodel = new TestModel (
		{
			nameValue : "@ViewBag.catItem.Name", 
			descriptionValue : "@Html.Raw(HttpUtility.HtmlDecode(ViewBag.catItem.Description))"
		}
	);
	var view = new ListView({model : mymodel});
	$("#production-list").html(view.render().el);
});
</script>
<h2>@ViewBag.Message</h2>


<div id="production-list" style="align: left;">assets-list-loading...</div>

<div id="cats">
	  in case you missed it the first time, this is the description:...<br />

@Html.Raw(ViewBag.catItem.Description)
</div>
